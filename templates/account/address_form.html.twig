{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe{% endblock %}

{% block body %}
    <section class="text-gray-600 body-font">
        <div class="container px-5 py-24 mx-auto">
            <div class="flex flex-col w-full mb-12">
                <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Ajout d'une nouvelle adresse</h1>
                <a href="{{ path('account_address') }}" class="mt-3 text-green-500 inline-flex items-center">
                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                         xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
                    </svg>
                    Retourner à mes adresses
                </a>
            </div>
            {{ form_start(form) }}
            <div class="lg:w-3/3 flex flex-col flex-wrap">
                <div class="relative w-1/2">
                    <div class="relative">
                        <label for="name" class="leading-7 text-sm text-gray-600">Nom</label>
                        {{ form_widget(form.name, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                    </div>
                </div>
                <div class="relative w-1/2">
                    <label for="lastname" class="leading-7 text-sm text-gray-600">Nom</label>
                    {{ form_widget(form.lastname, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
                <div class="relative w-1/2">
                    <label for="firstname" class="leading-7 text-sm text-gray-600">Prénom</label>
                    {{ form_widget(form.firstname, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
                <div class="relative w-1/2">
                    <label for="company" class="leading-7 text-sm text-gray-600">Nom d'entreprise ( facultatif )</label>
                    {{ form_widget(form.company, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
                <div class="relative w-1/2">
                    <label for="address" class="leading-7 text-sm text-gray-600">Adresse</label>
                    {{ form_widget(form.address, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
                <div class="relative w-1/2">
                    <label for="postal" class="leading-7 text-sm text-gray-600">Code postale</label>
                    {{ form_widget(form.postal, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
                <div class="relative w-1/2">
                    <label for="city" class="leading-7 text-sm text-gray-600">Ville</label>
                    {{ form_widget(form.city, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
                <div class="relative w-1/2">
                    <label for="country" class="leading-7 text-sm text-gray-600">Pays</label>
                    {{ form_widget(form.country, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
                <div class="relative w-1/2">
                    <label for="phone" class="leading-7 text-sm text-gray-600">Numéro de téléphone</label>
                    {{ form_widget(form.phone, {'attr': {'class': 'w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
